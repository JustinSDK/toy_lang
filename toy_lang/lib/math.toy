exports = ['min', 'max', 'abs', 'sum']

def min() {
    return arguments.sort().get(0)
}

def max() {
    return arguments.sort((n1, n2) -> n2 - n1).get(0)
}

def abs(n) {
    return -n if n < 0 else n
}

def sum(numbers) {
    nums = numbers if isInstance(numbers, List) else arguments 
    return nums.reduce((acc, n) -> acc + n, 0)
}